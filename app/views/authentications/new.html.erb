<body>
  <div class="box">
    <div class="authbox">
<%= form_with url: authentications_path, scope: :user do |form| %>
        <div class="creds">
          <p>Enter your credentials to gain access...</p>
        </div>
        <br/>
        <div>
          <%= form.label :email %>
          <%= form.email_field :email, required: true, class: "input" %>
        </div>
        <div>
          <%= form.label :password %>
          <%= form.password_field :password, required: true, class: "input" %>
        </div>
        <%= form.submit "Login", class: "button is-success"%>
      <% end %>
    </div>
  </div>
</body>
<style>
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100vw;
    height: 100vh;
    justify-content: center;
  }

  input[type="submit"] {
    margin-top: 10px;
  }

  .authbox {
  width: 50vw;
  height: 30vh;
  }
</style>