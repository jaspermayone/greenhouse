<div class="authbox">
 <%= form_with url: login_path, scope: :user do |form| %>

   		<div class="columns">
			<div class="column">
        <div class="creds">
				<p>Please enter your credentials <br> to gain access...</p>
        </div>
			</div>
			<div class="column is-narrow">
				<span class="icon-text has-text-success">
					<span class="icon is-medium">
						<!-- <i class="fa-regular fa-id-card fa-fade"></i> -->
	<i class="fa-solid fa-fingerprint fa-beat-fade"> </i>
					</span>
				</span>
			</div>
		</div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true, class: "input" %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true, class: "input" %>
  </div>
  <%= form.submit "Login", class: "button is-success"%>
<% end %>
</div>

<style>
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
  width: 100vw;
  height: 100vh;
  justify-content: center;
  }

  input[type="submit"] {
    margin-top: 10px;
  }

.authbox {
  width: 50vw;
  height: 35vh;
}

</style>