<div class="authbox">
  <div class="box">
 <!-- Create a rails form that creates a new agent -->
  <%= form_with url: agents_path, scope: :agent do |form| %>
    <div class="creds">
      <p><i>Enter the inital details for the new agent below...</i></p>
    </div>
  <%= form.invisible_captcha :loginid %>
  <div>
    <%= form.label :full_name %>
    <%= form.text_field :full_name, required: true, class: "input" %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true, class: "input" %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true, class: "input" %>
  </div>
  <div>
    <%= form.label :codename %>
    <%= form.text_field :codename, class: "input", required: true %>
  </div>

<div id="sub">
  <%= form.submit "Create Agent", class: "button is-success"%>
</div>
  <% end %>
  </div>
</div>

<style>
  body {
   width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  }

  #sub {
    margin-top: 2vh;
  }

  .creds {
    margin-bottom: 2vh;
  }

  input[type="submit"] {
    margin-top: 10px;
  }

.authbox {
   width: 50vw;
    position:absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
}

</style>