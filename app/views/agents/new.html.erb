<><div class="authbox">
 <%= form do |form| %>
   		<div class="columns">
			<div class="column">
        <div class="creds">
				<p>Enter your details to finish signing up!</p>
        </div>
			</div>
		</div>
<%= form.invisible_captcha :loginid %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true, class: "input" %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true, class: "input" %>
  </div>
  <%= form.submit "Login", class: "button is-success"%>
<% end %>
</div>

<style>
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
  width: 100vw;
  height: 100vh;
  justify-content: center;
  }

  input[type="submit"] {
    margin-top: 10px;
  }

.authbox {
  width: 50vw;
  height: 35vh;
}

</style>