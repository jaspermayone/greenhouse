<% content_for :title do %>
  MSG: <%= @message.id %> <%= @message.subject %>
<% end %>

<div class="container px-2">
  <div class="box">
    <div class="message">

      <div class="columns">
        <div id="back" class="column is-1">
          <a href="/mailbox" style="color: black;">&larr; Back</a>
        </div>
      </div>

      <table>
        <tr>
          <th><b>M-ID: </b></th>
          <td><i><%= @message.id %></i></td>
        </tr>
        <tr>
          <th><b>From: </b></th>
          <td><i><%= @message.from %></i></td>
        </tr>
        <tr>
          <th><b>Subject: </b></th>
          <td><i><%= @message.subject %></i></td>
        </tr>
        <tr>
          <th><b>Received: </b></th>
          <td>&nbsp;<i><%= @message.created_at.strftime("%B %d, %Y") %></i></td>
        </tr>
      </table>
      <br/>

      <div class="msgBody">
        <p class="msgText"><%= @message.body %></p>
      </div>
    </div>
  </div>
</div>

<style>
  .container {
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%,-50%);
    overflow: hidden;
  }

  .title {
    padding-top: .5rem;
  }

  .msgBody {
    overflow-y: scroll;
    max-height: 57vh;
    border: 1px solid #000;
    border-radius: 5px;
  }

  .msgText {
    margin-top: .5rem;
    margin-bottom: .5rem;
    margin-left: 1rem;
    margin-right: 1rem;
  }

  .message {
    background-color: transparent;
    width: 90vw;
    height: 78vh;
  }

  table {
    margin-top: -2.5rem;
    margin-bottom: -1rem;
  }

  #back {
    margin-bottom: 1.5rem;
  }
</style>
